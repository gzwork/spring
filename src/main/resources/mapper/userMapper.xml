<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gzwork.dao.UserDao">

    <sql id="baseColum">
        user_id,user_name,user_pwd,user_sex,user_phone
    </sql>

    <resultMap id="baseResultMap" type="com.gzwork.entity.User">
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userPwd" column="user_pwd"/>
        <result property="userSex" column="user_sex"/>
        <result property="userPhone" column="user_phone"/>
    </resultMap>

    <select id="getUserById" resultMap="baseResultMap" parameterType="com.gzwork.entity.User">
        select <include refid="baseColum"/> from gz_user where user_id=${userId};
    </select>
</mapper>